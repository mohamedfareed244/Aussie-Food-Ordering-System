<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=men%></title>
<link rel="stylesheet" href="/Css/style.css">
<link rel="icon" href="/images/12345.jpeg">
<script src="/js/script.js"></script>
<script src="https://kit.fontawesome.com/f4bd0b4361.js" crossorigin="anonymous"></script>

</head>

<body>

    <%- include("./partials/navbar") %>
    
   <div id="menu_selections">
    <h2 id ="headaftersafety">Choose What You Love </h2>
    <hr>
  <ul id="menulist" >
    <% sections.forEach(function(itemss) { %>
    <li class="menu_section" ><a href="/products/<%=itemss.name%>"><%= itemss.name%></a></li>
    <% }); %> 
  </ul>
   
</div>
<hr>
<!-- onclick="favorites(event.target)" -->
<div id ="menubody" >
 
    <% for(let i=0;i<browse.length;i++) { %>
      
    <div class="menu_items" ><img src="<%=browse[i].path %>"alt="" width="100%" height="100%" class="menu_img">
        <div class="descr_and_add">
            <img src="/images/favourite.png" class="favrs" alt=""title="remove from favourite" onclick="favremv(<%=browse[i].id%>,<%=i%>)">
            <img src="/images/love.png" class="favs" alt=""title="add to favourite" onclick="favadd(<%=browse[i].id%>,<%=i%>)">
            <img src="/images/add.png" alt="add_item" class="icons" onclick=add_to_cart("<%=browse[i].id%>")>
            <!-- <a href="/menu/<%=browse[i].section%>/<%=browse[i].id%>" ></a> -->
            
               
               
            
        <div class="description"> 
            <span class="names">  <%= browse[i].name %></span>
            <br>
            <p class="ingred"><%= browse[i].description %></p>
            <span class="prices">Price : <%= browse[i].price %> $</span>
        </div></div>
    
    </div>
    <% } %> 





    </div>
    <div  id="shows">
        <div id ="cc">
            <div id="cart_body">

                <%if(s.length>0){%>
                    <% s.forEach( function(itemss) { %> 
                       
                        <div class ="art"><img src="<%-itemss.item.path%>"alt="" class="item_img" >
                            
                        <span class="s1"> <b>item name :</b> <%- itemss.item.name %></span>
                        <br>
                        <span class="s2"><b>Price : <%-itemss.item.price%> $ Qty : </b> <b class="qty1"><%-itemss.qty%></b> </span>
                        
                    </div>  
                    <% }); %>  
               
                
     <%}%>
    </div>

     <button id="chout" onclick="location.href = '/products/cart/end/checkout';">Proceed to checkout</button>
            </div>
    
            
    </div>
    <!-- end shows -->
   

</body>

<script>document.getElementById("shows").style.display="none";</script>
    

</html>
