    <div id="container">
<ul id ="list_of_items">
<% cart.forEach(function (items){ %>
    <li>
        <%console.log(items.path+"  "+"items.name")%>
        <article id ="art"><img src="<%=items.path%>" alt="" id="item_img" >
            <span class="s1"> <b>item name :</b> <%=items.name%></span>
            <br>
            <span class="s2"><b>Price : <%=items.price%>$</b></span>
            <ul class ="cart_items">
                <li><img src="/images/minus.png" alt="" class ="im" ></li>
                <li><span class ="in_span">1</span></li>
                <li><img src="/images/plus2.png" alt="" class="im"></li>
            </ul>
        </article>
    </li>

<%});%>



  
</ul>
 



    </div>
    <table id ="prices">
       
        <tr>
            <td><b>Total Items : </b></td>
            <td class="data"><span><%=cart.length%> Items </span></td>
        </tr>
        <tr>
            <td><b>price (exc .vat) : </b></td>
            <% let sum =0;for(let i=0;i<cart.length;i++){sum+=cart[i].price} %>
            <td class="data"><span><%=sum%> $ </span></td>
        </tr>
        <tr>
            <td><b>vat 14% : </b></td>
            <td class ="data"><span><%=Math.round(((sum/100)*14))%> $ </span></td>
        </tr>
        <tr>
            <td><b>Total Price : </b></td>
            <td class ="data"><span><%=Math.round(((sum/100)*14))+sum%> $ </span></td>
        </tr>

    </table>
